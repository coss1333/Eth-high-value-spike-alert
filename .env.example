# === Required ===
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# === Optional tuning ===
WINDOW_BLOCKS=20            # Number of most-recent blocks to evaluate current spike
BASELINE_EMA_ALPHA=0.1      # Smoothing factor for baseline EMA (0-1). Lower = slower.
ZSCORE_THRESHOLD=3.0        # Trigger when current > baseline_mean + ZSCORE_THRESHOLD * baseline_std
RATIO_THRESHOLD=2.0         # Also trigger when current >= baseline_mean * RATIO_THRESHOLD
MIN_COUNT=20                # Minimum count of high-value txs in current window to avoid noise
POLL_SECONDS=15             # How often to poll latest block(s)
VALUE_ETH_THRESHOLD=10.0    # "High-value" transaction threshold in ETH
